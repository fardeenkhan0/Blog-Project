      </div>
    </nav>
    <section class="login-wrap mtb-40">
      <div class="container">
        <center>
          <!-- Column-2 -->
          <div class="col-lg-6 bglogin p-4">
            <form
              action="/insertregister"
              method="post"
              enctype="multipart/form-data"
            >
              <!-- logo -->
              <!-- <center>
                <img
                  class="mb-4 rounded-circle"
                  src="./Images/SignUpImage.jpeg"
                  alt="Sign Up Image"
                  width="20%"
                  height="20%"
                />
              </center> -->

              <!-- Heading (Register Here) -->
              <h1 class="mb-5 text-center">Register Here</h1>
              <% if(message.length > 0){ %>
              <div class="alert alert-danger"><%= message %></div>
              <% } %>
              <!-- User Name -->
              <div class="row mb-4">
                <div
                  class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2"
                >
                  Name
                </div>
                <div class="col-lg-10">
                  <input
                    name="name"
                    class="form-control text-capitalize"
                    type="text"
                    placeholder="Enter your name"
                    required
                  />
                </div>
              </div>

              <!-- Email -->
              <div class="row mb-3">
                <div
                  class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2"
                >
                  Email
                </div>
                <div class="col-lg-10">
                  <input
                    name="email"
                    class="form-control"
                    type="email"
                    placeholder="name@example.com"
                    required
                  />
                </div>
              </div>

              <!-- Password -->
              <div class="row mb-4">
                <div
                  class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2"
                >
                  Password
                </div>
                <div class="col-lg-10">
                  <input
                    name="password"
                    class="form-control"
                    type="password"
                    required
                  />
                </div>
              </div>

              <!-- Confirm Password -->
              <div class="row mb-4">
                <div
                  class="col-lg-3 text-center bg-secondary rounded text-light fw-light my-auto p-2"
                >
                  Confirm Password
                </div>
                <div class="col-lg-9">
                  <input
                    name="confirmpassword"
                    class="form-control"
                    type="password"
                    required
                  />
                </div>
              </div>

              <!-- Choose File -->
              <div class="row mb-4">
                <div class="col-lg-9">
                  <input type="file" name="profileimage" />
                </div>
              </div>
              <!-- Button (Login) -->
              <div class="row">
                <button type="submit" class="btn btn-primary mb-5 btn-lg">
                  Register
                </button>
              </div>
            </form>
          </div>
          <!-- End Column-2 -->
        </center>
      </div>
    </section>

    <footer>
      <div class="container">
        <div class="copyright">
