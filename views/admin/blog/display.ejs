<%- include('../../header.ejs') %>

<section class="dashboard-wrap mtb-40">
  <div class="container">
    <div class="body-content">
      <div class="row">
        <div class="col-md-3">
          <div class="dash-left">
            <ul>
              <li class="active">
                <a href="/admin/dashboard">Dashboard</a>
              </li>
              <li>
                <a href="/admin/blog/display" class="active">Blogs</a>
              </li>
              <li><a href="#">Categories</a></li>
              <li><a href="#">Pages</a></li>
              <li><a href="/logout">Logout</a></li>
            </ul>
          </div>
        </div>
        <div class="col-md-9">
          <div class="dash-right">
            <div class="dash-header">
              <div class="dash-title">
                <h1>Blogs</h1>
              </div>
              <button
                style="background-color: #221d2d; color: white"
                type="button"
                class="btn-md compo"
                data-bs-toggle="modal"
                data-bs-target="#exampleModal"
              >
                Add Blog
              </button>
            </div>

            <table class="table table-bordered table-striped">
              <tr>
                <th>#ID</th>
                <th>Title</th>
                <th>Discription</th>
                <th>Image</th>
                <!-- <th>Category</th> -->
                <!-- <th>Posted On</th> -->
                <th>Action</th>
              </tr>
              <% d.forEach((item)=>{ %>
              <tr>
                <td style="width: 100px"><%= item._id %></td>
                <td style="width: 100px"><%= item.title %></td>
                <td style="width: 150px; height: 50px">
                  <%= item.descripition.slice( 0, 100) %>
                </td>
                <!-- <td><%= item.descripition %></td> -->
                <td><img src="<%= item.image.url %>" width="50px" alt="" /></td>

                <td>
                  <div class="social-icons">
                    <a
                      href="/blogview/<%= item.id %>"
                      style="color: #221d2d"
                      class="fk"
                    >
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="/blogedit/<%= item.id %>" class="fk">
                      <i class="fas fa-pen-square"></i>
                    </a>
                    <a href="/blogdelete/<%= item.id %>" class="fk">
                      <i class="fas fa-trash"></i>
                    </a>
                  </div>
                </td>
              </tr>
              <% }) %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Modal -->
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Add Blog</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form action="/insertblog" method="post" enctype="multipart/form-data">
          <div class="md-3">
            <label for="">Title</label>
            <input type="text" name="title" class="form-control" />
          </div>

          <div class="md-3">
            <label for="">Discription</label>
            <textarea type="text" name="descripition" class="form-control">
            </textarea>
          </div>
          <div class="md-3">
            <label for="">Image</label>
            <input type="file" name="image" class="form-control" />
          </div>
          <br />
          <button
            style="background-color: #221d2d; color: white"
            type="submit"
            class="btn compo"
          >
            Submit
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../../footer.ejs') %>
