    <section class="login-wrap mtb-40">
      z
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-6">
            <div class="login-box">
              <h1>Administrator Login</h1>
              <% if(message.length > 0){ %>
              <div class="alert alert-danger"><%= message %></div>
              <% } %>
              <form action="/verifylogin" method="post">
                <div class="form-group">
                  <input
                    type="text"
                    name="email"
                    class="form-control"
                    placeholder="Email or username"
                  />
                </div>
                <div class="form-group">
                  <input
                    type="password"
                    name="password"
                    class="form-control"
                    placeholder="Password"
                  />
                </div>
                <!-- <div class="form-group">
                  <a href="#" class="btn btn-primary">Log In</a>
                </div> -->
                <center>
                  <button type="submit" class="btn btn-primary mb-5 btn-lg">
                    Login
                  </button>
                </center>

                <!-- Register Now -->
                <center>
                  <p class="text-uppercase fw-light">
                    Don't have an account? &nbsp;<a href="/register"
                      >Register Now</a
                    >
                  </p>
                </center>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <footer>
      <div class="container">
        <div class="copyright">
          <div>Designed by RSGiTECH</div>
